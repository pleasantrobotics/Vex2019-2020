#include "robot-config.h"
using namespace vex;

int display(){
    while(1){
    if (Brain.Battery.capacity() < 10) {
        Brain.Screen.setOrigin(125,100);
        Brain.Screen.setFont(fontType::prop40);
        Brain.Screen.print("AUTO");
        Brain.Screen.newLine();
        Brain.Screen.print("LOW BATTERY!");
        }
    else {
        Brain.Screen.setOrigin(100,100);
        Brain.Screen.setFont(fontType::prop30);
        Brain.Screen.print("AUTO");
        Brain.Screen.newLine();
        Brain.Screen.print("Battery percentage: ");
        Brain.Screen.print(Brain.Battery.capacity());
        }
    }
}

int autoprog(){
    while(1){
        LeftMotor.rotateFor(2, timeUnits::sec, 50, velocityUnits::pct);
        RightMotor.rotateFor(2, timeUnits::sec, 50, velocityUnits::pct);
        LeftFrontMotor.rotateFor(2, timeUnits::sec, 50, velocityUnits::pct);
        RightFrontMotor.rotateFor(2, timeUnits::sec, 50, velocityUnits::pct);
        
        MiddleMotor.rotateFor(1, timeUnits::sec, 100, velocityUnits::pct);
    }
    
}

int main() {
    while(1){
        display();
        autoprog();
    }
    
    
}

